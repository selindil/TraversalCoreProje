@using EntityLayer.Concrete
@model List<Destination>

<section class="w3l-main-slider" id="home">
    <div class="banner-content">
        <div id="demo-1"
             data-zs-src='["/Traversal-Starter/assets/images/banner1.jpg", "/Traversal-Starter/assets/images/banner2.jpg","/Traversal-Starter/assets/images/banner3.jpg", "/Traversal-Starter/assets/images/banner4.jpg"]'
             data-zs-overlay="dots">
            <div class="demo-inner-content">
                <div class="container">
                    <div class="banner-infhny">
                        <h3>Seyahetler için uzaklara gitmeye gerek yok.</h3>
                        <h6 class="mb-3">Bir sonraki maceranı hemen planla!</h6>
                        <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
                            <form action="#" method="post" class="booking-form">
                                <div class="row book-form">
                                    <div class="form-input col-md-4 mt-md-0 mt-3">

                                        <select name="selectpicker" class="selectpicker">
                                            <option value="">Rotalar</option>
                                            <option value="africa">Bali-Tayland Turu</option>
                                            <option value="america">Balkan Turu</option>
                                            <option value="asia">İtalya-Roma Turu</option>
                                            <option value="eastern-europe">Paris-Fransa Turu</option>
                                            <option value="europe">Mısır Turu</option>
                                            <option value="south-america">Balkan Turu</option>
                                            <option value="south-america">Doğu Anadolu Turu</option>
                                        </select>

                                    </div>
                                    <div class="form-input col-md-4 mt-md-0 mt-3">

                                        <input type="date" name="" placeholder="Date" required="">
                                    </div>
                                    <div class="bottom-btn col-md-4 mt-md-0 mt-3">
                                        <button class="btn btn-style btn-secondary">
                                            <span class="fa fa-search mr-3"
                                                  aria-hidden="true"></span> Ara
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="w3l-grids-3 py-5">
    <div class="container py-md-5">
        <div class="title-content text-left mb-lg-5 mb-4">
            <h6 class="sub-title">Visit</h6>
            <h3 class="hny-title">Popular Destinations</h3>
        </div>
        <div class="row bottom-ab-grids">
            <!--/row-grids-->
            @foreach (var item in Model)
            {
                <div class="col-lg-6 subject-card mt-lg-0 mt-4">
                    <div class="subject-card-header p-4">
                    <a href="#" class="card_title p-lg-4d-block">
                        <div class="row align-items-center">
                            <div class="col-sm-5 subject-img">
                                <img src="@item.Image" class="img-fluid" alt="">
                            </div>
                            <div class="col-sm-7 subject-content mt-sm-0 mt-4">
                                <h4>@item.City</h4>
                                <p>@item.DayNight</p>
                                <div class="dst-btm">
                                    <h6 class=""> Başlayan fiyatlarla </h6>
                                    <span>@item.Price TL</span>
                                </div>
                                <p class="sub-para">@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            }
            
            <!--//row-grids-->
        </div>
    </div>
</section>